<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ro.rasel.spring.microservices</groupId>
        <artifactId>service-parent</artifactId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>../../parents/service-parent/pom.xml</relativePath>
    </parent>

    <artifactId>contact-service</artifactId>
    <packaging>jar</packaging>

    <properties>
        <start.class>ro.rasel.spring.microserivces.contactservice.ContactServiceApplication</start.class>
    </properties>

    <description>Basic resource service used for exposing data from database.</description>

    <dependencies>
        <dependency>
            <groupId>ro.rasel.spring.microservices.components</groupId>
            <artifactId>sso-client-component</artifactId>
        </dependency>
        <dependency>
            <groupId>ro.rasel.spring.microservices.components</groupId>
            <artifactId>eureka-client-component</artifactId>
        </dependency>
        <dependency>
            <groupId>ro.rasel.spring.microservices.components</groupId>
            <artifactId>ssl-component</artifactId>
        </dependency>
        <dependency>
            <groupId>ro.rasel.spring.microservices.components</groupId>
            <artifactId>swagger-component</artifactId>
        </dependency>
        <dependency>
            <groupId>ro.rasel.spring.microservices.components</groupId>
            <artifactId>zipkin-component</artifactId>
        </dependency>

        <!--Spring Boot-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-sleuth</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>

        <!--Validation-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>

        <!--H2-->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.kongchen</groupId>
                <artifactId>swagger-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <apiSources>
                        <apiSource>
                            <locations>ro.rasel.service.contacts.controller</locations>
                            <schemes>https</schemes>
                        </apiSource>
                    </apiSources>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
