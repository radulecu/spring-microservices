                <plugin>
                    <groupId>io.fabric8</groupId>
                    <artifactId>fabric8-maven-plugin</artifactId>
                    <version>${fabric8-maven-plugin.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>build</goal>
                            </goals>
                            <phase>install</phase>
                        </execution>
                        <execution>
                            <id>push</id>
                            <goals>
                                <goal>push</goal>
                            </goals>
                            <phase>deploy</phase>
                        </execution>
                    </executions>
                    <configuration>
                        <verbose>true</verbose>
                        <images>
                            <image>
                                <name>${DOCKER_REPOSITORY}/${project.artifactId}</name>
                                <!--                                <name>${DOCKER_REPOSITORY}/spring-microservices</name>-->

                                <build>
                                    <from>${DOCKER_REPOSITORY}/ubuntu-22-04-open-jre:latest</from>
                                    <tags>
                                        <tag>${project.version}</tag>
                                        <tag>${project.version}-${maven.build.timestamp}</tag>
                                        <!--                                        <tag>${project.artifactId}.latest</tag>-->
                                        <!--                                        <tag>${project.artifactId}.${project.version}</tag>-->
                                    </tags>

                                    <ports>
                                        <port>${server.port}</port>
                                    </ports>

                                    <entryPoint>
                                        <!-- exec form for ENTRYPOINT -->
                                        <exec>
                                            <arg>java</arg>
                                            <arg>-jar</arg>
                                            <arg>/opt/app/${project.artifactId}.jar</arg>
                                        </exec>
                                    </entryPoint>

                                    <assembly>
                                        <mode>dir</mode>
                                        <name>${project.artifactId}-${project.version}</name>
                                        <targetDir>/opt</targetDir>
                                        <descriptor>assembly.xml</descriptor>
                                    </assembly>
                                </build>
                            </image>
                        </images>
                    </configuration>
                </plugin>
                <!--                <plugin>-->
                <!--                    <groupId>io.fabric8</groupId>-->
                <!--                    <artifactId>docker-maven-plugin</artifactId>-->
